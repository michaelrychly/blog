<p>
  <strong>All articles</strong>
</p>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Link</th>
  </tr>
  <%= @all_articles.each do | article | %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article)%></td>
    </tr>
  <% end %>
</table>